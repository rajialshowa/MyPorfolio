@model Core.Entities.Owner

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<div style="padding:160px;">
    <h1>Details</h1>

    <div>
        <h4>Owner</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Profil)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Profil)
            </dd>
